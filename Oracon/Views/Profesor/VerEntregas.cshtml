
@{
    ViewData["Title"] = "VerEntregas";
    Layout = null;
}

<h2>VerEntregas</h2>


@if (ViewBag.Entregas.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>Estudiante</th>
                <th>Fecha de entrega</th>
                <th>Mensaje</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Entregas)
            {
                <tr>
                    <td>@item.usuario.nombres @item.usuario.apellidos</td>
                    <td>@item.fechaEntrega</td>
                    <td>
                        @if (item.observacion == "")
                        {


                            <label>-- Sin mensaje --</label>
                        }
                        else
                        {
                            @item.observacion
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Descargar", "PDFDisplayTarea", "Profesor", new { idTarea = item.idTarea }, new { target = "_blank" })
                    </td>
                </tr>
            }





        </tbody>
    </table>
}
else
{
    <h3>Aun no se han entregaod tareas...</h3>
}

