
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<h2>Index</h2>
<table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Precio</th>
          
            <th>Video</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in ViewBag.CursosProf)
        {
            <tr>
                <td>@x.nombre</td>
                <td>@x.descripcion</td>
                <td>@x.precio</td>
                <td>
                    <iframe width="500" height="300" src="@x.videoPresentacion" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </td>
                <td>
                    <a href="/Profesor/VerCurso?idCurso=@x.idCurso">Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>

