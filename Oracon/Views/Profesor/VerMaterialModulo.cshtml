<h1 class="display-4" style="text-align:center;">Material de estudio</h1>
<br />
<div class="container">
    <h2 class="display-5">Videos</h2>
    <a class="btn" style="background-color:#ff2f00; color:white;" href="/Profesor/AgregarVideoModulo?idModulo=@ViewBag.Modulo.idModulo">Agregar video</a>

</div>
@if (ViewBag.Videos.Count > 0)
{
    <div class="container">
        <table class="table">
            <thead style="background-color:black; color:white;">
                <tr>
                    <th>Titulo del video</th>
                    <th>Descripcion</th>
                    <th></th>
                </tr>
            </thead>


            <tbody>
                @foreach (var video in ViewBag.Videos)
                {
                    <tr>
                        <td>@video.titulo</td>
                        <td>@video.descripcion</td>
                        <td>
                            <button type="button" class="btn" data-toggle="modal" data-target="#exampleModal" style="color: white; background-color: #ff2f00;">
                                Ver video
                            </button>

                            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Presentación del curso</h5>
                                            <br />

                                        </div>
                                        <div class="modal-body col-lg-12">
                                            <iframe width="450px" height="300px" src="@video.link" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

                                        </div>
                                        <div class="modal-footer">
                                            <div style="align-items:center; align-content:center; text-align:center;">
                                                <br />
                                                <button class="btn" data-dismiss="modal" aria-label="Close" style="color:white; background-color:#ff2f00;">Regresar</button>
                                                <br />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>

                    </tr>
                }




            </tbody>
        </table>

    </div>


}
else
{
    <div class="container">
        <br />
        <div class="row alert alert-warning" style="margin:0;padding:0; text-align:center; align-items:center;">
            No se han registrado videos en este modulo.
        </div>
    </div>

}
<br />
<div class="container">
    <h2 class="display-5">Documentos</h2>
    <a class="btn" style="background-color:#ff2f00; color:white;" href="/Profesor/AgregarDocumentoModulo?idModulo=@ViewBag.Modulo.idModulo">Agregar documento</a>
</div>
@if (ViewBag.Documentos.Count > 0)
{
    <div class="container">
        <table class="table">
